<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.algoview.SortingBarsController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#addItems" text="Add 10 items" />
            <TextField fx:id="delayInput" promptText="Delay (ms)" />
            <Button mnemonicParsing="false" onAction="#sortButtonClick" text="Sort" />
            <Button mnemonicParsing="false" onAction="#stopButtonClick" text="Stop" />
            <Button mnemonicParsing="false" onAction="#resetButtonClick" text="Reset" />
         </children>
      </HBox>
      <HBox fx:id="sortingHBox" alignment="BOTTOM_CENTER" maxHeight="500.0" maxWidth="1280.0" minHeight="0.0" minWidth="0.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="500.0" prefWidth="1280.0">
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin></HBox>
   </children>
</VBox>
